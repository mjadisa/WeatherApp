<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_current_temp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="26dp"
            android:layout_marginStart="25dp"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_wind_speed" android:layout_marginTop="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="120dp" android:layout_marginEnd="120dp"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_info"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="21dp"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_current_temp"/>
    <ImageView
            android:layout_width="87dp"
            android:layout_height="69dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/iv_wind_direction"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_info" android:contentDescription="@string/wind_direction"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_measurement_time"
            app:layout_constraintTop_toTopOf="@+id/tv_info" app:layout_constraintStart_toStartOf="@+id/tv_wind_speed"
            app:layout_constraintBottom_toBottomOf="@+id/tv_info"/>
</androidx.constraintlayout.widget.ConstraintLayout>